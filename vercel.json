{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/api/server.js"
        }
    ]
}